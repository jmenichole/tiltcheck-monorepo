{
  "name": "@tiltcheck/db",
  "version": "0.1.0",
  "description": "Neon PostgreSQL database client for TiltCheck ecosystem",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "test": "vitest --run"
  },
  "dependencies": {
    "@neondatabase/serverless": "^1.0.2",
    "@tiltcheck/config": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0",
    "vitest": "^1.6.0"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./client": {
      "types": "./dist/client.d.ts",
      "import": "./dist/client.js"
    },
    "./queries": {
      "types": "./dist/queries.d.ts",
      "import": "./dist/queries.js"
    }
  }
}
