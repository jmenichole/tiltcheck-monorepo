{
  "name": "@tiltcheck/auth",
  "version": "0.1.0",
  "description": "Shared authentication package for TiltCheck ecosystem - JWT, cookies, OAuth, and middleware",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "test": "vitest --run"
  },
  "dependencies": {
    "jose": "^5.2.0",
    "@noble/ed25519": "^2.0.0",
    "bs58": "^5.0.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "next": "^14.0.0",
    "typescript": "^5.3.0",
    "vitest": "^1.6.0"
  },
  "peerDependencies": {
    "express": "^4.18.0",
    "next": ">=13.0.0"
  },
  "peerDependenciesMeta": {
    "express": {
      "optional": true
    },
    "next": {
      "optional": true
    }
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./jwt": {
      "types": "./dist/jwt.d.ts",
      "import": "./dist/jwt.js"
    },
    "./cookies": {
      "types": "./dist/cookies.d.ts",
      "import": "./dist/cookies.js"
    },
    "./discord": {
      "types": "./dist/discord.d.ts",
      "import": "./dist/discord.js"
    },
    "./solana": {
      "types": "./dist/solana.d.ts",
      "import": "./dist/solana.js"
    },
    "./service": {
      "types": "./dist/service.d.ts",
      "import": "./dist/service.js"
    },
    "./middleware/express": {
      "types": "./dist/middleware/express.d.ts",
      "import": "./dist/middleware/express.js"
    },
    "./middleware/next": {
      "types": "./dist/middleware/next.d.ts",
      "import": "./dist/middleware/next.js"
    },
    "./middleware/node": {
      "types": "./dist/middleware/node.d.ts",
      "import": "./dist/middleware/node.js"
    }
  }
}
