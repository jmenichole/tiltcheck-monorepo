# Discord Bot
DISCORD_TOKEN=your_discord_bot_token_here
DISCORD_CLIENT_ID=your_discord_client_id_here
DISCORD_CLIENT_SECRET=your_discord_client_secret_here

# ===========================================
# Mod Notification System Configuration
# ===========================================
# Channel ID where mod notifications will be sent
MOD_CHANNEL_ID=your_mod_channel_id_here
# Role ID to mention when sending mod notifications
MOD_ROLE_ID=your_mod_role_id_here
# Enable/disable mod notifications (default: true)
MOD_NOTIFICATIONS_ENABLED=true
# Rate limit window in milliseconds (default: 60000 = 1 minute)
MOD_RATE_LIMIT_WINDOW_MS=60000
# Maximum notifications per rate limit window (default: 10)
MOD_MAX_NOTIFICATIONS_PER_WINDOW=10
# Deduplication window in milliseconds (default: 300000 = 5 minutes)
MOD_DEDUPE_WINDOW_MS=300000

# Solana Configuration
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
# Or use devnet for testing:
# SOLANA_RPC_URL=https://api.devnet.solana.com

# JustTheTip Fee Wallet (receives 0.0007 SOL per tip)
JUSTTHETIP_FEE_WALLET=your_fee_wallet_address_here

# Optional: Database (if using persistent storage)
DATABASE_URL=postgresql://user:password@localhost:5432/tiltcheck

# JWT Authentication (for API password-based auth)
JWT_SECRET=supersecret
JWT_EXPIRES_IN=7d

# Supabase Configuration (FREE TIER - Recommended for persistent storage)
# Get these from your Supabase project dashboard: https://supabase.com/dashboard
# Supabase free tier includes:
# - 500MB database storage
# - Unlimited API requests  
# - Used for: wallet registrations, user onboarding, game history
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key_here
# Service role key for admin operations (keep secret, server-side only)
# Required for wallet and onboarding persistence
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# Optional: Pricing Oracle
# Note: Pricing oracle uses Jupiter Price API (https://price.jup.ag) for Solana token prices.
# No API key required - Jupiter provides free, real-time price data.

# Health Check Ports
DISCORD_BOT_HEALTH_PORT=8081
EVENT_ROUTER_HEALTH_PORT=8082

# ===========================================
# Cross-Chain Swap Configuration (LTC Bridge)
# ===========================================

# ChangeNOW API Key for LTC to Solana token swaps
# Get your API key from https://changenow.io/api
# When not set, LTC Bridge returns mock responses for testing
CHANGENOW_API_KEY=your_changenow_api_key_here

# ===========================================
# AI & Trust API Configuration
# ===========================================

# OpenAI API Configuration (for AI Gateway)
# Get your API key from https://platform.openai.com/api-keys
# When not set, AI Gateway uses mock responses
OPENAI_API_KEY=sk-your-api-key-here
# Model selection (default: gpt-4o-mini for cost efficiency)
# Options: gpt-4o, gpt-4o-mini, gpt-4-turbo, gpt-3.5-turbo
OPENAI_MODEL=gpt-4o-mini

# Trust Rollup External Data APIs (optional)
# When not set, Trust Rollup uses curated mock data
# Set USE_MOCK_TRUST_DATA=true to force mock data even with keys configured
USE_MOCK_TRUST_DATA=false
# CasinoGuru API for RTP verification data
CASINO_GURU_API_KEY=your_casino_guru_api_key_here
# AskGamblers API for player complaints and reviews
ASKGAMBLERS_API_KEY=your_askgamblers_api_key_here

# ===========================================
# Stripe Configuration (Chrome Extension Subscriptions)
# ===========================================

# Get your Stripe API keys from https://dashboard.stripe.com/apikeys
# STRIPE_SECRET_KEY: Secret key (sk_live_xxx or sk_test_xxx)
# Never expose this in client-side code
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here

# STRIPE_PUBLIC_KEY: Publishable key (pk_live_xxx or pk_test_xxx)
# This is safe to use in client-side code
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key_here

# STRIPE_WEBHOOK_SECRET: Webhook signing secret (whsec_xxx)
# Get from https://dashboard.stripe.com/webhooks after creating an endpoint
# Endpoint URL should be: https://your-domain.com/api/stripe/webhook
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# STRIPE_PRICE_ID: Price ID for the subscription product
# Create a product and recurring price in Stripe Dashboard:
# https://dashboard.stripe.com/products
# Use the price ID (price_xxx) for the $5/month Chrome Extension subscription
STRIPE_PRICE_ID=price_your_subscription_price_id_here

# FOUNDER_USERNAMES: Comma-separated list of usernames that get free premium access
# These users will bypass the subscription requirement
FOUNDER_USERNAMES=jmenichole
