{
  "name": "@tiltcheck/browser-extension",
  "version": "1.1.0",
  "description": "TiltGuard browser extension for casino fairness analysis and tilt detection",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "node build.js",
    "watch": "node build.js --watch",
    "clean": "rm -rf dist",
    "server": "node server/api.js",
    "dev": "concurrently \"npm run watch\" \"npm run server\"",
    "zip": "cd dist && zip -r ../tiltcheck-extension.zip ."
  },
  "devDependencies": {
    "@types/chrome": "^0.1.31",
    "concurrently": "^8.2.2",
    "esbuild": ">=0.25.0",
    "typescript": "^5.3.2"
  }
}
